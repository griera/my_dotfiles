# ~/.bash_color_codes: Created by griera and executed by bash(1) inside
# ~/.bashrc for non-login shells
#
# Defines color codes into a set of variables for improve scripts readibility
# (e.g., useful to modify PS1 environment variable)

# Foreground regular colors
FG_DEFAULT='\[\e[0m\]'
FG_BLACK='\[\e[0;30m\]'
FG_RED='\[\e[0;31m\]'
FG_GREEN='\[\e[0;32m\]'
FG_YELLOW='\[\e[0;33m\]'
FG_BLUE='\[\e[0;34m\]'
FG_PURPLE='\[\e[0;35m\]'
FG_CYAN='\[\e[0;36m\]'
FG_WHITE='\[\e[0;37m\]'

# Foreground bold colors
FG_BOLD_DEFAULT='\[\e[1m\]'
FG_BOLD_BLACK='\[\e[1;30m\]'
FG_BOLD_RED='\[\e[1;31m\]'
FG_BOLD_GREEN='\[\e[1;32m\]'
FG_BOLD_YELLOW='\[\e[1;33m\]'
FG_BOLD_BLUE='\[\e[1;34m\]'
FG_BOLD_PURPLE='\[\e[1;35m\]'
FG_BOLD_CYAN='\[\e[1;36m\]'
FG_BOLD_WHITE='\[\e[1;37m\]'

# Foreground dark colors
FG_DARK_DEFAULT='\[\e[2m\]'
FG_DARK_BLACK='\[\e[1;30m\]'
FG_DARK_RED='\[\e[2;31m\]'
FG_DARK_GREEN='\[\e[2;32m\]'
FG_DARK_YELLOW='\[\e[2;33m\]'
FG_DARK_BLUE='\[\e[2;34m\]'
FG_DARK_PURPLE='\[\e[2;35m\]'
FG_DARK_CYAN='\[\e[2;36m\]'
FG_DARK_WHITE='\[\e[2;37m\]'

# Foreground underline colors
FG_UNDERLINE_DEFAULT='\[\e[4m\]'
FG_UNDERLINE_BLACK='\[\e[4;30m\]'
FG_UNDERLINE_RED='\[\e[4;31m\]'
FG_UNDERLINE_GREEN='\[\e[4;32m\]'
FG_UNDERLINE_YELLOW='\[\e[4;33m\]'
FG_UNDERLINE_BLUE='\[\e[4;34m\]'
FG_UNDERLINE_PURPLE='\[\e[4;35m\]'
FG_UNDERLINE_CYAN='\[\e[4;36m\]'
FG_UNDERLINE_WHITE='\[\e[4;37m\]'

# Foreground high intensty
FG_HIGH_INTENSITY_BLACK='\[\e[0;90m\]'
FG_HIGH_INTENSITY_RED='\[\e[0;91m\]'
FG_HIGH_INTENSITY_GREEN='\[\e[0;92m\]'
FG_HIGH_INTENSITY_YELLOW='\[\e[0;93m\]'
FG_HIGH_INTENSITY_BLUE='\[\e[0;94m\]'
FG_HIGH_INTENSITY_PURPLE='\[\e[0;95m\]'
FG_HIGH_INTENSITY_CYAN='\[\e[0;96m\]'
FG_HIGH_INTENSITY_WHITE='\[\e[0;97m\]'

# Foreground bold high intensty
FG_BOLD_HIGH_INTENSITY_BLACK='\[\e[1;90m\]'
FG_BOLD_HIGH_INTENSITY_RED='\[\e[1;91m\]'
FG_BOLD_HIGH_INTENSITY_GREEN='\[\e[1;92m\]'
FG_BOLD_HIGH_INTENSITY_YELLOW='\[\e[1;93m\]'
FG_BOLD_HIGH_INTENSITY_BLUE='\[\e[1;94m\]'
FG_BOLD_HIGH_INTENSITY_PURPLE='\[\e[1;95m\]'
FG_BOLD_HIGH_INTENSITY_CYAN='\[\e[1;96m\]'
FG_BOLD_HIGH_INTENSITY_WHITE='\[\e[1;97m\]'

# Background colors
BG_BLACK='\[\e[40m\]'
